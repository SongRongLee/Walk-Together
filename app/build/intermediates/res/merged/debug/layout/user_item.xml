<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/image_circle"
        android:src="@drawable/circle"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="60dp"

        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="steps"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="65dp"
        android:gravity="center_vertical"
        android:textColor="@color/Dimgray"
        android:id="@+id/steps"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/image_circle"
        android:id="@+id/like_count_group">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="5"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/Dimgray"
            android:id="@+id/like_count"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/image_yo"
            android:src="@drawable/yo"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/like_count" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/image_circle"
        android:layout_below="@+id/like_count_group"
        android:id="@+id/message_count_group">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/Dimgray"
            android:id="@+id/message_count"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/image_message"
            android:src="@drawable/message"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/like_count" />
    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/image_link"
        android:src="@drawable/link"
        android:layout_below="@+id/image_circle"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="60dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/image_like"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="300dp"
        />

</RelativeLayout><!-- From: file:/D:/Hubert/Android/Walk-Together/app/src/main/res/layout/user_item.xml -->