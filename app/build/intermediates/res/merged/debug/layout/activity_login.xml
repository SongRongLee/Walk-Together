<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="25dp"
    android:paddingBottom="25dp" tools:context=".Login"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:background="@color/colorPrimary"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bamboo"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Walk Together"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.09"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0"
        android:layout_marginTop="15dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_account"
            android:layout_weight="3"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@."
            android:textSize="15sp"
            android:autoText="false"
            android:nestedScrollingEnabled="false"
            android:textColor="@color/primary_text_default_material_dark"
            android:textColorHint="@color/hint_foreground_material_dark" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_password"
            android:layout_weight="3"
            android:hint="Password"
            android:inputType="textPassword"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:textSize="15sp"
            android:textColorHint="@color/hint_foreground_material_dark"
            android:textColor="@color/primary_text_default_material_dark" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/bt_logIn"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:enabled="false"
        android:textColor="@color/abc_primary_text_material_dark" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="132dp"
        android:layout_height="37dp"
        android:text="Sign Up"
        android:id="@+id/bt_signUp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:enabled="true"
        android:visibility="visible"
        android:textSize="12sp"
        android:textColor="@color/abc_primary_text_material_dark" />

</LinearLayout>
